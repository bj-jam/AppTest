<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="horizontal">

            <Button
                android:id="@+id/animationButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="animation" />

            <Button
                android:id="@+id/roundButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="round" />

            <Button
                android:id="@+id/shadowButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="shadow" />

            <Button
                android:id="@+id/animationSpeedDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="animation speed default" />

            <Button
                android:id="@+id/animationSpeedSlow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="animation speed slow" />

            <Button
                android:id="@+id/animationSpeedFast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="animation speed fast" />

            <Button
                android:id="@+id/animationSpeedNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="animation speed normal" />

        </LinearLayout>

    </HorizontalScrollView>

    <com.app.test.circle.MagnificentChart
        android:id="@+id/magnificentChart"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        app:animation="false"
        app:mBackground="#ffffff"
        app:round="false"
        app:shadow="true"
        app:shadowColor="#F2F2F2"
        app:showTitle="false" />

</LinearLayout>


